class Monitor ( wx.Frame ) :
        def __init__ ( self, parent ) :
            wx.Frame.__init__(self, None, wx.ID_ANY, "data", size=(100,100) )
            self.SetBackgroundColour ( wx.RED )

            mp = wx.Panel ( self, -1 )
            ms = wx.BoxSizer ( wx.HORIZONTAL )

            bogus = "Hot Coffee"

            self.l1 = MyStaticText ( self, wx.ID_ANY, bogus )
            ms.Add ( self.l1, 1, wx.EXPAND )
            self.l2 = MyStaticText ( self, wx.ID_ANY, bogus )
            ms.Add ( self.l2, 1, wx.EXPAND )
            self.l3 = MyStaticText ( self, wx.ID_ANY, bogus )
            ms.Add ( self.l3, 1, wx.EXPAND )

            mp.SetSizer ( ms )

